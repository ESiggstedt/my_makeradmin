FROM node:8-alpine

RUN mkdir /frontend

COPY ./package.json /frontend/

WORKDIR /frontend

RUN npm install

COPY ./webpack.config.js /frontend/

COPY  ./src/ /frontend/src

COPY  ./dist/ /frontend/dist

EXPOSE 8080

CMD ["node", "node_modules/.bin/webpack-dev-server", "--config", "webpack.config.js", "--host", "0.0.0.0", "--watch"]
